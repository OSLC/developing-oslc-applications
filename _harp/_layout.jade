doctype
html.no-js(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title #{ title || 'Learn to develop OSLC applications'}

    link(rel="stylesheet" href="/developing-oslc-applications/css/autoprefixed/oslc.css")

    script(src="/developing-oslc-applications/js/lib/modernizr.js")
    
    script.
      // add .mustard/.no-mustard css classes
      Modernizr.addTest( 'mustard', 'querySelector' in document && 'localStorage' in window && 'addEventListener' in window );
      
      Modernizr.load([{
        test: Modernizr.mustard,
        yep: '/developing-oslc-applications/css/autoprefixed/oslc_enhanced.css'
      }])
      
    
  body
    header.header
      .flag
        .image
          button.navburger.mustard-only(title="Main menu", role="button", aria-label="Toggle Navigation", data-toggle-class="primary-nav-is-open", data-toggle-target="body")
            span.navburger-line.top
            span.navburger-line.middle
            span.navburger-line.bottom
        .body
          a.flag.image-link(href="/developing-oslc-applications/")
            .image
              img.logo-img(src="/developing-oslc-applications/img/logo-old-50px.png")              
            .body
              span.logo-text
                abbr.oslc-name(title="Open Services for Lifecycle Collaboration") OSLC
                br
                span.project-name Developer&rsquo;s Guide

    .sticky-footer-body.off-canvas-wrap      
      nav.nav
        .menu.primary
          .item.desk-up
            a.image-link(href="/developing-oslc-applications/")
              img(src="/developing-oslc-applications/img/logo-old-big.gif")
              span.logo-text
                abbr.oslc-name(title="Open Services for Lifecycle Collaboration") OSLC
                span.project-name Developer&rsquo;s Guide
          ul.items
            - var $i = 1;
            for page, slug in public._data
              li(class='item #{ current.source === slug ? "current" : "" }' role="presentation")
                a(href="/developing-oslc-applications/#{ slug === 'index' ? '' : (slug + '.html') }") #{ page.title }
            li.item(role="presentation")
              a(href="http://open-services.net/") open-services.net
      main.main
        .card
          header.header
            h1.title #{ title }
          section.content
            div.copy
              != yield
            
        a.close-off-canvas(role="button", aria-label="Toggle Navigation", data-toggle-class="primary-nav-is-open", data-toggle-target="body")
    footer.footer
      p
       | All content <a href="http://creativecommons.org/licenses/by/3.0/us/")>Creative Commons Attribution 3.0 US</a>
